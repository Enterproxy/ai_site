{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
	  "@/*": ["app/*"],
	  "@components/*": ["components/*"],
      "@lib/*": [
        "lib/*"
      ],
      "@store/*": [
        "store/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "store/**/*",
    ".next/types/**/*.ts",
	"globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
